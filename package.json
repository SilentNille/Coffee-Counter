{
  "name": "test-app",
  "version": "1.0.0",
  "description": "Eine Beispiel-Node.js-Anwendung",
  "main": "electron.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "electron": "electron .",
    "electron-dev": "set NODE_ENV=development && electron .",
    "build": "electron-builder",
    "package-win": "electron-builder --win --config.forceCodeSigning=false",
    "package-mac": "electron-builder --mac",
    "package-linux": "electron-builder --linux",
    "package-win-dir": "electron-builder --win --dir",
    "package-manual": "node package-app.js"
  },
  "keywords": [
    "node",
    "express",
    "api",
    "electron",
    "desktop"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "archiver": "7.0.1",
    "electron": "^29.2.0",
    "electron-builder": "^24.13.1",
    "electron-download": "4.1.1",
    "extract-zip": "2.0.1",
    "jest": "^29.5.0",
    "nodemon": "3.1.9"
  },
  "build": {
    "appId": "com.testapp.electron",
    "productName": "Test App",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "portable"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/.{idea,git,gitignore,npmignore}",
      "!{.env,.env.example,package-lock.json}"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
